{
    "version": 8,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 23,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "default",
            "displayName": "Default",
            "generator": "Ninja",
            "hidden": true
        },
        {
            "name": "debug",
            "displayName": "Debug",
            "description": "Debug build using Ninja generator",
            "inherits": ["default"],
            "binaryDir": "${sourceDir}/build/debug",
            "cacheVariables": {
                "CMAKE_Fortran_COMPILER": "ifx",
                "CMAKE_Fortran_FLAGS": "-g -O0",
                "CMAKE_Fortran_MODULE_DIRECTORY": "${sourceDir}/build/debug/mod"
            },
            "environment": {
                "CMAKE_BUILD_TYPE": "Debug"
            },
            "hidden": false
        },
        {
            "name": "release",
            "displayName": "Release",
            "description": "Debug build using Ninja generator",
            "inherits": ["default"],
            "binaryDir": "${sourceDir}/build/release",
            "cacheVariables": {
                "CMAKE_Fortran_COMPILER": "ifx",
                "CMAKE_Fortran_FLAGS": "-O3 -xCORE-AVX2",
                "CMAKE_Fortran_MODULE_DIRECTORY": "${sourceDir}/build/release/mod"
            },
            "environment": {
                "CMAKE_BUILD_TYPE": "Release"
            },
            "hidden": false
        }
    ],
    "buildPresets": [
        {
            "name": "debug",
            "configurePreset": "debug",
            "hidden": false,
            "configuration": "Debug"
        },
        {
            "name": "release",
            "configurePreset": "release",
            "hidden": false,
            "configuration": "Release"
        }
    ]
}